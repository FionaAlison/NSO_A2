###########################################################################
# SNMP Daemon Configuration (Generated by Ansible)
###########################################################################

# Location and Contact Info
sysLocation    {{ inventory_hostname }}
sysContact     Admin <admin@{{ inventory_hostname }}>
sysServices    72

# Agent listening on default SNMP port
agentaddress udp:161

# SNMPv2c Access
view   systemonly  included   .1.3.6.1.2.1.1
view   systemonly  included   .1.3.6.1.2.1.25.1

rocommunity  {{ snmp_community | default('public') }} default -V systemonly
rocommunity6 {{ snmp_community | default('public') }} default -V systemonly

# Optional SNMPv3 (disabled by default unless you add users)
# rouser authPrivUser authpriv -V systemonly

# Optional process check
# proc service.py
