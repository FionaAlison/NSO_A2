vrrp_instance VI_1 {
    state {{ inventory_hostname.endswith('proxy1') | ternary('MASTER', 'BACKUP') }}
    interface {{ interface }}
    virtual_router_id 51
    priority {{ inventory_hostname.endswith('proxy1') | ternary('101', '100') }}
    advert_int 1
    authentication {
        auth_type PASS
        auth_pass secret
    }
    virtual_ipaddress {
        {{ vip_address }}
    }
}
